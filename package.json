{
  "name": "t-force-antivirus",
  "version": "1.0.1",
  "description": "T-Force Anti-Virus Futuristic Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "author": "Dimitri",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tforceguardianalerts-a11y/t-force-antivirus.git"
  },
  "dependencies": {
    "chart.js": "^4.4.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.2.1",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1"
  },
  "build": {
    "appId": "com.tforce.antivirus",
    "productName": "T-Force Anti-Virus",
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tforceguardianalerts-a11y",
        "repo": "t-force-antivirus"
      }
    ]
  }
}